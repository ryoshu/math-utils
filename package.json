{
  "name": "@ifosc/math-utils",
  "version": "1.0.0",
  "description": "Some handy math utilities.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prepush": "npm run lint && npm test",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "*.js",
      "lib/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "keywords": [
    "ifosc",
    "math",
    "graphics"
  ],
  "author": "Ricky Baocn",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.12.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1"
  }
}
